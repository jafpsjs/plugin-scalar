{
  "name": "@jafps/plugin-scalar",
  "version": "1.0.1",
  "description": "Fastify plugin for OpenAPI 3.1 API reference documentation.",
  "type": "module",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "tsc",
    "test": "node --enable-source-maps --experimental-test-coverage --test-coverage-exclude \"src/**/__tests__/*.ts\" --test \"./dist/**/__tests__/*.{spec,test}.js\"",
    "lint": "eslint",
    "script:scalar": "node script/scalar.js"
  },
  "author": "Joshua Avalon",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jafpsjs/plugin-scalar.git"
  },
  "bugs": {
    "url": "https://github.com/jafpsjs/plugin-scalar/issues"
  },
  "homepage": "https://github.com/jafpsjs/plugin-scalar#readme",
  "imports": {},
  "exports": {
    ".": {
      "import": "./dist/index.js"
    }
  },
  "keywords": [
    "fastify",
    "fastify-plugin"
  ],
  "files": [
    "public/**/*",
    "dist/**/*",
    "!dist/**/__tests__/**/*"
  ],
  "devDependencies": {
    "@fastify/helmet": "^13.0.2",
    "@jafps/plugin-error": "^1.0.1",
    "@jafps/plugin-openapi": "^1.1.1",
    "@jafps/plugin-schema": "^1.2.6",
    "@joshuaavalon/eslint-config-javascript": "^10.0.0",
    "@joshuaavalon/eslint-config-typescript": "^10.0.0",
    "@scalar/api-reference": "1.44.15",
    "@types/node": "^24.9.1",
    "eslint": "^9.38.0",
    "fastify": "^5.6.1",
    "globals": "^16.4.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "dependencies": {
    "@fastify/static": "^9.0.0",
    "@fontsource/montserrat": "5.2.8",
    "@fontsource/roboto": "5.2.9",
    "fastify-plugin": "^5.1.0",
    "typebox": "^1.0.81"
  }
}
